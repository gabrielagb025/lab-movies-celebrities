<h2>MOVIE DETAILS</h2>

<h3>{{movie.title}}</h3>
<h4>{{movie.genre}}</h4>
<p>{{movie.plot}}</p>

<h3> CAST</h3>
{{#each cast}}

<h4>{{this.name}}</h4>
<p>{{this.ocupation}}</p>
<p>{{this.catchPhrase}}</p>

{{/each}}

<div> 
    <form action="/movies/{{movie._id}}/delete" method="POST">
    <button class="btn btn-danger">Delete movie</button>
    </form>
</div>